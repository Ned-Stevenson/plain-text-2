{
    "manifest_version": 3,
    "name": "Plain Text Sidebar",
    "description": "This extension was cloned and extended from the plain text extension by Svoekino under the GPL 3.0 license.\n\nThis extension allows the storage of quick text notes, accessable through the browser sidebar",
    "version": "0.1",
    "default_locale": "en", 
    "homepage_url": "https://github.com/stuntphish/plain-text-2",

    "sidebar_action": 
    {
      "default_icon":
      {
        "48": "img/icon-48-colored.png"
      },
      "default_panel": "panel.html",
      "default_title": "Plain text"
    },

    "options_ui": {
          "page": "pages/options.html",
          "open_in_tab": true
        },

    "background": {
        "service_worker": "background.js"
      },

    "commands": {
      "toggle-feature": {
        "suggested_key": {
          "default": "Ctrl+Shift+U",
          "linux": "Ctrl+Shift+U"
        },
        "description": "Open the Plain text"
      }
    }
}

